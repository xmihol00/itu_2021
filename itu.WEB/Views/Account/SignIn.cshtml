@model SignInDTO

<script>
    function ValidateSignIn()
    {
        let userName = document.getElementById("UserName").value;
        let password = document.getElementById("Password").value;

        return !(!userName || !userName.trim() || !password || !password.trim());
    }
</script>

<h2 class="signin-headline">Přihlášení do administrace knih</h2>
<div class="d-flex justify-content-center">
    <div class="signin-box">
        <form asp-action="Signin" method="POST" onsubmit="return ValidateSignIn()">
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input id="UserName" asp-for="UserName" class="form-control" style="width: 430px" />
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input id="Password" type="password" asp-for="Password" class="form-control" style="width: 430px;" />
            </div>
            <a href="~/Account/Register" class="btn btn-primary" >Registrovat se</a>
            <button type="submit" class="btn btn-primary" style="float: right;">Přihlásit se</button>
            <input type="hidden" asp-for="ReturnURL" />
        </form>
    </div>
</div>